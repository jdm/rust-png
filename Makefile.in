VPATH=%VPATH%

CC ?= gcc
CXX ?= g++
CFLAGS += -fPIC -I$(VPATH)/../libpng
AR ?= ar
RUSTC ?= rustc
RUSTFLAGS := $(filter-out -O,$(RUSTFLAGS)) -L ../libpng --opt-level=3

.PHONY: all
all:	librustpng.dummy

%.o: %.c
	$(CC) $< -o $@ -c $(CFLAGS)

librustpng.dummy: lib.rs libshim.a
	$(RUSTC) $(RUSTFLAGS) $< --crate-type=lib --out-dir .
	touch $@

rustpng-test: lib.rs libshim.a
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

libshim.a: shim.o
	$(AR) rcs libshim.a shim.o

check: rustpng-test
	./rustpng-test

.PHONY: clean
clean:
	rm -f *.o *.a *.so *.dylib *.dll *.dummy *-test
